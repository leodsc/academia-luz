<Window x:Class="aula_01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:aula_01"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Adicionar" Command="{Binding comando}" HorizontalAlignment="Left" Margin="364,0,0,0" VerticalAlignment="Center"/>
        <TextBox HorizontalAlignment="Left" Margin="324,141,0,0" TextWrapping="Wrap" Text="{Binding nome}" VerticalAlignment="Top" Width="120"/>
        <ListBox ItemsSource="{Binding lista}" Margin="575,63,50,116"/>
    </Grid>
</Window>
